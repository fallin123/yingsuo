<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/de_frm_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rg_img_backgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/register_bg" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/de_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="61dip"
            android:src="@drawable/seal_logo"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="61dip"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <cn.yingsuo.im.server.widget.ClearWriteEditText
            android:id="@+id/reg_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rc_ed_public_service_search_selector"
            android:drawablePadding="5dip"
            android:ellipsize="end"
            android:hint="@string/nickname"
            android:inputType="textPersonName"
            android:maxLength="32"
            android:maxLines="1"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="#FFF"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/text_default_size" />

        <cn.yingsuo.im.server.widget.ClearWriteEditText
            android:id="@+id/reg_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rc_ed_public_service_search_selector"
            android:drawablePadding="5dip"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="#FFF"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/text_default_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <cn.yingsuo.im.server.widget.ClearWriteEditText
                android:id="@+id/reg_code"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="7"
                android:background="@drawable/rc_ed_public_service_search_selector"
                android:drawablePadding="5dip"
                android:hint="@string/code"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:textColor="#FFF"
                android:textColorHint="#FFFFFF"
                android:textSize="@dimen/text_default_size" />


            <Button
                android:id="@+id/reg_getcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="4"
                android:background="@drawable/rs_select_btn_gray"
                android:clickable="false"
                android:minHeight="1dp"
                android:minWidth="1dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/send_code"
                android:textColor="#FFF"
                android:textSize="12sp" />

        </LinearLayout>

        <cn.yingsuo.im.server.widget.ClearWriteEditText
            android:id="@+id/reg_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rc_ed_public_service_search_selector"
            android:drawablePadding="5dip"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="#FFF"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/text_default_size" />

        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="6-16位字符区分大小写"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small_size" />-->

        <cn.yingsuo.im.server.widget.ClearWriteEditText
            android:id="@+id/reg_phone_tuijian"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rc_ed_public_service_search_selector"
            android:drawablePadding="5dip"
            android:hint="推荐人手机号(选填)"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="#FFF"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/text_default_size" />
        <Button
            android:id="@+id/reg_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rs_select_btn_gray"
            android:clickable="false"
            android:text="@string/register"
            android:textColor="#FFF"
            android:textSize="@dimen/text_default_size" />

    </LinearLayout>

</RelativeLayout>